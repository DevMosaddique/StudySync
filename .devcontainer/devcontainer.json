{
  "name": "Python Web Development Environment",
  "customizations": {
    "vscode": {
      "settings": {
        // General Workspace Settings
        "workbench.startupEditor": "none",
        "workbench.editor.tabSizing": "shrink",
        "workbench.statusBar.visible": true,
        "workbench.sideBar.location": "right",
        "workbench.preferredLightColorTheme": "GitHub Light",
        "workbench.preferredDarkColorTheme": "GitHub Dark Dimmed",
        "workbench.iconTheme": "fira-code-material-icon-theme",
        "workbench.activityBar.visible": false,
        "workbench.editor.enablePreview": false,

        // Editor Appearance
        "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
        "editor.fontLigatures": true,
        "editor.fontSize": 14,
        "editor.fontWeight": "500",
        "editor.cursorBlinking": "expand",
        "editor.cursorStyle": "line",
        "editor.lineNumbers": "on",
        "editor.minimap.enabled": false,
        "editor.renderWhitespace": "boundary",
        "editor.tabSize": 2,
        "editor.smoothScrolling": true,
        "editor.guides.bracketPairs": true,
        "editor.bracketPairColorization.enabled": true,
        "editor.wordWrap": "on",
        "editor.rulers": [80, 120],

        // File Management
        "files.autoSave": "onFocusChange",
        "files.exclude": {
          "**/.git": true,
          "**/.DS_Store": true,
          "**/node_modules": true
        },

        // Formatting and Linting
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 2,
        "eslint.format.enable": true,

        // Terminal Settings
        "terminal.integrated.fontFamily": "JetBrains Mono",
        "terminal.integrated.fontSize": 14,
        "terminal.integrated.cursorStyle": "line",
        "terminal.integrated.scrollback": 10000,
        "terminal.integrated.tabs.enabled": false,

        // Git Settings
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,
        "gitlens.views.repositories.files.layout": "tree",

        // Explorer Settings
        "explorer.openEditors.visible": 1,
        "explorer.compactFolders": false,
        "explorer.confirmDelete": false,

        // Debug Settings
        "debug.toolBarLocation": "hidden",

        // Notebook Settings
        "notebook.showCellStatusBar": "hidden",

        // Custom Colors
        "workbench.colorCustomizations": {
          "scrollbarSlider.activeBackground": "#00000050",
          "scrollbarSlider.background": "#00000030",
          "scrollbarSlider.hoverBackground": "#00000040"
        }
      },
      "extensions": [
        // General Extensions
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "dracula-theme.theme-dracula",
        "aleleba.fira-code-material-icon-theme",
        "ritwickdey.LiveServer",

        // Python-Specific Extensions
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "donjayamanne.python-environment-manager",
        "KevinRose.vsc-python-indent",

        // Docker and Dev Containers
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "VARIANT": "3.10-bullseye"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10",
      "installTools": true
    }
  },
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "remoteUser": "vscode"
}
